{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "types": ["node"],
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "noEmit": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
